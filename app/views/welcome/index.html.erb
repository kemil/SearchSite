            <div class="span6">
            	<a href="/how-do-i-sail"><h2><%= I18n.t('home-how_do_i_sail')%></h2></a>
                <div>
                	<a href="/how-do-i-sail">
                    <%= image_tag "wings.png", :alt => "wings", :class => "pull-left"%> 
